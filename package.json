{
    "name": "ft-transcendence-monorepo",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "dev": "pnpm -r run dev",
        "build": "pnpm packages-build",
        "packages-build": "pnpm --filter \"./packages/*\" run build",
        "apps-build": "pnpm --filter \"./apps/*\" run build",
        "test": "pnpm -r run test",
        "clean": "rm -rf node_modules **/*/node_modules",
        "docker-start" : "docker compose up -d --build",
        "docker-stop" : "docker compose down -v"
    },
    "engines": {
        "node": ">=24.11.1",
        "pnpm": ">=10.23.0"
    },
    "packageManager": "pnpm@10.23.0"
}