{
  "__comment__": "ELK Stack Overview Dashboard for ft-transcendence. Monitors Elasticsearch cluster health, Logstash pipeline performance, and Kibana availability. Compatible with Prometheus datasource via elasticsearch-exporter.",
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {
          "type": "grafana",
          "uid": "-- Grafana --"
        },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "description": "ELK Stack monitoring dashboard for ft-transcendence project. Tracks Elasticsearch cluster health, indexing rates, search performance, Logstash pipelines, and log ingestion metrics.",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [
    {
      "asDropdown": false,
      "icon": "external link",
      "includeVars": true,
      "keepTime": true,
      "tags": ["ft-transcendence"],
      "targetBlank": true,
      "title": "Related Dashboards",
      "type": "dashboards"
    }
  ],
  "panels": [
    {
      "__comment__": "Row: Cluster Health - High-level Elasticsearch cluster status",
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "id": 1,
      "panels": [],
      "title": "Elasticsearch Cluster Health",
      "type": "row"
    },
    {
      "__comment__": "Stat: Cluster health status (green/yellow/red)",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "mappings": [
            {
              "options": { "0": { "color": "red", "index": 2, "text": "RED" } },
              "type": "value"
            },
            {
              "options": {
                "1": { "color": "yellow", "index": 1, "text": "YELLOW" }
              },
              "type": "value"
            },
            {
              "options": {
                "2": { "color": "green", "index": 0, "text": "GREEN" }
              },
              "type": "value"
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "green", "value": 2 }
            ]
          },
          "unit": "short"
        },
        "overrides": []
      },
      "gridPos": { "h": 4, "w": 4, "x": 0, "y": 1 },
      "id": 2,
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "textMode": "auto"
      },
      "pluginVersion": "10.0.0",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "editorMode": "code",
          "expr": "elasticsearch_cluster_health_status{namespace=\"logging\", color=\"green\"} * 2 + elasticsearch_cluster_health_status{namespace=\"logging\", color=\"yellow\"} * 1 + elasticsearch_cluster_health_status{namespace=\"logging\", color=\"red\"} * 0",
          "legendFormat": "Cluster Status",
          "range": true,
          "refId": "A"
        }
      ],
      "title": "Cluster Status",
      "type": "stat"
    },
    {
