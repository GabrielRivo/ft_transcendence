      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "editorMode": "code",
          "expr": "sum(increase(auth_login_attempts_total{namespace=\"$namespace\", result=\"success\"}[$__rate_interval]))",
          "legendFormat": "success",
          "range": true,
          "refId": "A"
        },
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "editorMode": "code",
          "expr": "sum(increase(auth_login_attempts_total{namespace=\"$namespace\", result=\"failure\"}[$__rate_interval]))",
