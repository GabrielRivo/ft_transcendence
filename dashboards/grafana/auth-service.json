      "pluginVersion": "10.0.0",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "editorMode": "code",
          "expr": "sum(rate(http_requests_total{namespace=\"$namespace\", service=~\".*auth.*\"}[$__rate_interval])) by (status)",
          "legendFormat": "{{status}}",
          "range": true,
          "refId": "A"
        }
      ],
      "title": "Response Status Codes",
      "type": "timeseries"
